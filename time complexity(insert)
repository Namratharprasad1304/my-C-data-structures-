#include <stdio.h>

// Function to insert a value at a given position in an array
void insert_element(int arr[], int *n, int value, int position) {
    // Check if the position is valid
    if (position < 0 || position > *n) {
        printf("Invalid position for insertion.\n");
        return;
    }

    // 1. Shift elements to the right
    // This loop does the main work, determining the O(n) complexity.
    for (int i = *n; i > position; i--) {
        arr[i] = arr[i - 1];
    }

    // 2. Insert the new value
    arr[position] = value;

    // 3. Increment the size of the array
    (*n)++;
}

int main() {
    int arr[10] = {10, 20, 30, 40, 50}; // Array with max size 10
    int n = 5;                        // Current number of elements
    int value = 99;
    int position = 2;                 // Index to insert at (between 20 and 30)

    insert_element(arr, &n, value, position);

    printf("Array after insertion:\n");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]); // Output: 10 20 99 30 40 50
    }
    printf("\n");

    return 0;
}
